	<div id="content">
	  <aside id="featured" class="article">
	  	<% articles = @articles %>
	  	<% if articles.empty? %>
	  		<p>No articles found.</p>
	  	<% else %>
	  		<% unless @featured.nil? %>
	    		<h3 class="category">Featured</h3>
	    		<div class="image">
	    		<%= image_tag(@featured.picture.url, alt: "featured article") if @featured.picture? %>
	    		</div>
	    		<div class="right">
	    		<h2><%= @featured.title %></h2>
	    		<p>
	    		By Author on <%= @featured.date %> in 
	    		<% @featured.tags.each do |tag| %>
	    		<%= link_to tag.name, tag %>
	    		<% end %>
	    		</p>
	    		<p class="body"><%= @featured.body %></p>
	    		<%= link_to "read more...", @featured,
	    							{ :class => "read-more" } %>
	    		</div>
	    		<% articles.to_a.delete(@featured) %>
	    		<% end %>
	    <% end %>
	  </aside>
	  <%= render partial: "layouts/articles", locals: {articles: articles} %>
	</div>